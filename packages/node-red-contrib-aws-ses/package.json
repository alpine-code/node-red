{
    "name": "@alpine-code/node-red-contrib-aws-ses",
    "version": "0.0.1",
    "description": "AWS SES for Node-RED ",
    "main": "index.js",
    "scripts": {
        "test": "jest --testPathIgnorePatterns integration --forceExit --detectOpenHandles",
        "test:integration": "jest --forceExit --detectOpenHandles"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/alpine-code/node-red-contrib-aws-ses.git"
    },
    "publishConfig": {
        "access": "public"
    },
    "author": "ilzenzo",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/alpine-code/node-red-contrib-aws-ses/issues"
    },
    "homepage": "https://github.com/alpine-code/node-red-contrib-aws-ses#readme",
    "keywords": [
        "node-red",
        "aws-ses"
    ],
    "dependencies": {
        "@aws-sdk/client-ses": "^3.33.0",
        "aws-sdk": "^2.993.0",
        "nodemailer": "^6.6.5",
        "uuid": "^3.3.2"
    },
    "devDependencies": {
        "eslint": "^6.1.0",
        "husky": "^4.0.10",
        "jest": "^24.9.0",
        "lint-staged": "^9.4.2",
        "node-red": "^1.0.2",
        "node-red-node-test-helper": "^0.2.3"
    },
    "node-red": {
        "nodes": {
            "aws-ses-config": "src/nodes/config.js",
            "aws-ses-send": "src/nodes/send.js"
        }
    },
    "jest": {
        "testEnvironment": "node"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm test"
        }
    },
    "lint-staged": {
        "src/**/*.js": [
            "prettier --write",
            "git add"
        ]
    }
}
